{
  "name": "astro-notion-blog",
  "type": "module",
  "version": "0.10.0",
  "private": true,
  "scripts": {
    "dev": "astro dev",
    "start": "astro dev",
    "build": "astro build",
    "build:cached": "npm run cache:fetch && astro build",
    "preview": "astro preview",
    "astro": "astro",
    "lint": "ESLINT_USE_FLAT_CONFIG=false eslint --ext .js,.ts,.astro src",
    "format": "npx prettier --write .",
    "cache:fetch": "node scripts/blog-contents-cache.cjs",
    "cache:purge": "nx reset && rm -f tmp/*",
    "_fetch-notion-blocks": "node scripts/retrieve-block-children.cjs"
  },
  "dependencies": {
    "@astrojs/react": "^4.3.0",
    "@astrojs/rss": "^4.0.12",
    "@fontsource-variable/inter": "^5.2.6",
    "@fontsource-variable/jetbrains-mono": "^5.2.6",
    "@fontsource-variable/noto-sans-jp": "^5.2.6",
    "@iconify-json/mingcute": "^1.2.5",
    "@iconify-json/simple-icons": "^1.2.47",
    "@iconify-json/twemoji": "^1.2.4",
    "@notionhq/client": "^4.0.2",
    "@supercharge/promise-pool": "^3.2.0",
    "astro": "^5.13.2",
    "astro-icon": "^1.1.5",
    "astro-pagefind": "^1.8.3",
    "async-retry": "^1.3.3",
    "axios": "^1.11.0",
    "exif-be-gone": "^1.5.1",
    "katex": "^0.16.22",
    "mermaid": "^11.9.0",
    "metascraper": "^5.49.1",
    "metascraper-description": "^5.49.1",
    "metascraper-image": "^5.49.1",
    "metascraper-title": "^5.49.1",
    "overlayscrollbars": "^2.11.5",
    "prismjs": "^1.30.0",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "sharp": "^0.34.3"
  },
  "devDependencies": {
    "@nrwl/nx-cloud": "^19.1.0",
    "@types/async-retry": "^1.4.9",
    "@types/js-base64": "^3.3.1",
    "@types/katex": "^0.16.7",
    "@types/prismjs": "^1.26.5",
    "@typescript-eslint/eslint-plugin": "^8.39.1",
    "@typescript-eslint/parser": "^8.39.1",
    "@typescript-eslint/typescript-estree": "^8.39.1",
    "cli-progress": "^3.12.0",
    "eslint": "^9.33.0",
    "eslint-plugin-astro": "^1.3.1",
    "nx": "21.4.0"
  },
  "nx": {
    "targets": {
      "_fetch-notion-blocks": {
        "inputs": [
          "!{projectRoot}/**/*",
          "!{projectRoot}/**/.*",
          "!{projectRoot}/**/.*/**/*",
          {
            "env": "DATABASE_ID"
          }
        ],
        "outputs": [
          "{projectRoot}/tmp"
        ]
      }
    },
    "includedScripts": [
      "_fetch-notion-blocks"
    ]
  }
}
