---
import Layout from '../layouts/Layout.astro'
---
<Layout title="About" path="/about">
  <div slot="main">
    <h2 class="blog-label">About</h2>
    <span>準備中</span>
  </div>
</Layout>

<style>
  h2 {
    margin: 0 0 0.7rem;
    font-size: 2.25rem;
    font-weight: 700;
    color: var(--fg);
    line-height: 1.3;
  }
  @media (max-width: 640px) {
    h2 {
      font-size: 1.875rem;
    }
  }
</style>