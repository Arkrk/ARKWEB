---
import * as interfaces from '../../lib/interfaces.ts'
import { buildHeadingId } from '../../lib/blog-helpers.ts'
import RichText from './RichText.astro'
import NotionBlocks from '../NotionBlocks.astro'
import { Icon } from 'astro-icon/components'

export interface Props {
  block: interfaces.Block
  headings: interfaces.Block[]
}

const { block, headings } = Astro.props

const id = buildHeadingId(block.Heading2)
---

{
  block.Heading2.IsToggleable ? (
    <details class="toggle">
      <summary>
        <a href={`#${id}`}>
          <h3 class="heading2" data-section={id} id={id}>
            {block.Heading2.RichTexts.map((richText: interfaces.RichText) => (
              <RichText richText={richText} />
            ))}
          </h3>
        </a>
        <Icon name="mingcute:down-line" />
      </summary>
      <div class="opened">
        {block.Heading2.Children && (
          <NotionBlocks blocks={block.Heading2.Children} headings={headings} />
        )}
      </div>
    </details>
  ) : (
    <a href={`#${id}`}>
      <h3 class="heading2" data-section={id} id={id}>
        {block.Heading2.RichTexts.map((richText: interfaces.RichText) => (
          <RichText richText={richText} />
        ))}
      </h3>
    </a>
  )
}

<style>
  .heading2 {
    margin: 3rem 0 1.1rem;
    color: var(--fg);
    font-size: 1.5rem;
  }
  @media (max-width: 640px) {
    .heading2 {
      font-size: 1.2rem;
    }
  }
  .heading2::before {
    content: "##";
    color: var(--border);
    margin-right: 8px;
  }
  @media (hover: hover) {
    .heading2:hover::before {
      color: var(--fg2);
    }
  }
  @media (hover: none) {
    .heading2:active::before {
      color: var(--fg2);
    }
  }

  .toggle {
    margin: 1.6rem 0 0;
  }
  @media (max-width: 640px) {
    .toggle {
      margin: 1.2rem 0 0;
    }
  }

  .toggle > summary {
    cursor: pointer;
    display: flex;
    margin: 3rem 0 0.3rem;
    align-items: center;
  }

  .toggle > summary::-webkit-details-marker {
    display: none;
  }

  @media (hover: hover) {
    .toggle > summary:hover {
      background: var(--bg2);
    }
  }
  @media (hover: none) {
    .toggle > summary:active {
      background: var(--bg2);
    }
  }

  .toggle > summary > a {
    display: inline;
  }

  .toggle > summary > a > .heading2 {
    display: inline;
  }

  [data-icon="mingcute:down-line"] {
    margin-left: auto;
    justify-content: center;
    width: 28px;
    height: 28px;
    transition: .1s;
  }

  details[open] summary [data-icon="mingcute:down-line"] {
    transform: rotate(180deg)
  }

  .opened {
    margin-top: 1.1rem;
  }
</style>
