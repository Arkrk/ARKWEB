---
import { RichText } from '../../../lib/interfaces.ts'

export interface Props {
  richText: RichText
}

const { richText } = Astro.props
---

{
  /* prettier-ignore */
  richText.Href && !richText.Mention ? (
    <a href={richText.Href} target="_blank" rel="noopener noreferrer"><slot /></a>
  ) : (
    <slot />
  )
}

<style>
  a {
    color: var(--ac);
    text-decoration: underline;
    text-decoration-color: var(--bd2);
    text-underline-offset: 2.5px;
  }
  @media (hover: hover) {
    a:hover {
      color: var(--ac2);
    }
  }
  @media (hover: none) {
    a:active {
      color: var(--ac2);
    }
  }
</style>
