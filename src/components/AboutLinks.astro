---
import { Icon } from 'astro-icon/components'
---

<div>
<ul class="scroll-links">
  <li>
    <a href="https://github.com/Arkrk/ARKWEB" target="_blank" rel="noopener noreferrer">
      <Icon name="simple-icons:github" />
      <span>リポジトリ</span>
    </a>
  </li>
  <li>
    <a href="https://x.com/messages/compose?recipient_id=3092854820" target="_blank" rel="noopener noreferrer" class="twitter-dm-button" data-screen-name="@Arkxv1">
      <Icon name="simple-icons:x" />
      <span>メッセージを送る</span>
    </a>
  </li>
</ul>
</div>

<style>
	ul {
  	display: flex;
    list-style-type: none;
    padding: 0 0 30px 0;
    gap: 8px;
    overflow-x: scroll;
    white-space: nowrap;
    scrollbar-width: none;
  }
  ul::-webkit-scrollbar {
    display: none;
  }
  @media (max-width: 640px) {
    div {
    	margin-left: calc(-50vw + 50%);
      margin-right: calc(-50vw + 50%);
    }
    ul {
      padding-left: 18px;
    }
    ul:last-child {
      padding-right: 18px;
    }
  }
  a {
    display: flex;
    align-items: center;
    height: 40px;
    padding-right: 10px;
    border: var(--border);
    border-radius: var(--radius);
    overflow: hidden;
    color: var(--fg);
  }
  @media (hover: hover) {
    a:hover {
      background: var(--bg2);
    }
  }
  @media (hover: none) {
    a:active {
      background: var(--bg2);
    }
  }
  span {
    padding-left: 5px;
  }
  svg {
    margin-left: 10px;
  }
</style>