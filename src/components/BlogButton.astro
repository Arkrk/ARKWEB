---
import { Icon } from 'astro-icon/components'
---

<a class="blog-button" href="/blog" aria-label="ブログ">
	<Icon name="mingcute:edit-line" />
</a>

<style>
	.blog-button {
    display: flex;
    width: 35px;
    height: 35px;
    justify-content: center;
    align-items: center;
    border-radius: 8px;
  }
  .blog-button:hover {
  	cursor: pointer;
    background: #f7f6f3;
  }
  svg {
  	width: 26px;
    height: 26px;
  }
	.blog-button [data-icon="mingcute:edit-line"] {
    color: var(--fg);
  }
  .blog-button.current [data-icon="mingcute:edit-line"] {
    color: var(--accents-4);
  }
</style>

<script>
  document.querySelectorAll('.blog-button').forEach(link => {
    if(location.pathname.includes('/blog')){
      link.classList.add('current')
    }
  })
</script>