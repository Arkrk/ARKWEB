---
import { Post } from '../lib/interfaces.ts'
import { getDateStr } from '../lib/blog-helpers.ts'

export interface Props {
  post: Post
}

const { post } = Astro.props
---

<div>
  {post.UpdateDate ? <div class="post-date">&nbsp;→&nbsp;{getDateStr(post.UpdateDate)}&nbsp;に更新</div> : ''}
</div>

<style>
  .post-date {
    display: flex;
    align-items: center;
    font-size: 0.9rem;
  }
  .post-date svg {
    width: 18px;
    height: 18px;
    margin-right: 5px; 
  }
</style>