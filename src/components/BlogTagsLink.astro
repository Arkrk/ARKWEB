---
import type { SelectProperty } from '../lib/interfaces.ts'
import { getTagLink } from '../lib/blog-helpers.ts'
import NoContents from './NoContents.astro'
import '../styles/notion-color.css'
import { Icon } from 'astro-icon/components'

export interface Props {
  heading: string
  tags: SelectProperty[]
}

const { heading, tags } = Astro.props
---

<div class="blog-tags-link">
  <Icon name="mingcute:filter-line" />
  <h2>{heading}</h2>
  {
    tags.length === 0 ? (
      <NoContents contents={tags} />
    ) : (
      <ul>
        {tags.map((tag: SelectProperty) => (
          <li>
            <a href={getTagLink(tag.name)}>
              {tag.name}
            </a>
          </li>
        ))}
      </ul>
    )
  }
</div>

<style>
  .blog-tags-link {
    display: flex;
    align-items: center;
    padding-bottom: 20px;
  }
  .blog-tags-link svg {
    width: 26x;
    height: 26px;
    min-width: 26px;
    min-height: 26px;
  }
  .blog-tags-link h2 {
    margin: 0;
    padding-left: 0.4rem;
    color: #777;
    font-size: 0.95rem;
  }
  .blog-tags-link ul {
    list-style-type: none;
    display: flex;
    padding: 0;
    overflow-x: scroll;
    overflow-y: visible;
    white-space: nowrap;
    padding: 10px 0;
  }
  .blog-tags-link ul::-webkit-scrollbar {
    display: none;
  }
  .blog-tags-link ul li {
    position: relative;
    padding-right: 0.6rem;
    line-height: 1.2rem;
    font-size: 1rem;
    gap: 6px;
  }
  .blog-tags-link ul li a {
    min-width: 0;
    border-radius: 8px;
    padding: 6px 12px;
    line-height: 1.2;
    color: rgb(50, 48, 44);
    background: #f7f6f3;
  }
  .blog-tags-link ul li a:hover {
    background: #ebebeb;
  }
</style>
