---
import { Block } from '../lib/interfaces.ts'
import NotionBlocks from './NotionBlocks.astro'

export interface Props {
  blocks: Block[]
}

const { blocks } = Astro.props
---

<div class="post-body">
  <NotionBlocks blocks={blocks} isRoot={true} />
</div>

<style>
  .post-body {
    padding: 3rem 0 5rem;
    width: 75%;
  }
  @media (max-width: 800px) {
    .post-body {
      width: 100%;
    }
  }
</style>
