---
import programs from '../images/anime-programs.webp'
import jpopnow from '../images/jpop-now.webp'
---

<div class="wrapper">
  <a href="https://docs.google.com/spreadsheets/d/1vZrPKeo_D8XE-HvXYfq_VbCApAVk4XCOd4bvUlI69pQ" target="_blank" rel="noopener noreferrer">
    <img src={programs.src} alt="" />
    <div class="caption">
      <p class="label">スプレッドシート</p>
      <p class="title">2025夏 深夜アニメ番組表</p>
    </div>
  </a>
  <a href="https://open.spotify.com/playlist/6sVKH9fo8g52sGvGetr72c?si=d9376ee5ed944ff2" target="_blank" rel="noopener noreferrer">
    <img src={jpopnow.src} alt="" />
    <div class="caption">
      <p class="label">Spotify プレイリスト</p>
      <p class="title">J-Pop Now</p>
    </div>
  </a>

<style>
  .wrapper {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    column-gap: 16px;
    row-gap: 16px;
  }
  @media (max-width: 900px) {
    .wrapper {
      grid-template-columns: repeat(2, 1fr);
    }
  }
  @media (max-width: 640px) {
    .wrapper {
      grid-template-columns: repeat(1, 1fr);
    }
  }

  .wrapper > a {
    display: flex;
    position: relative;
    background: var(--bg);
    border: var(--border);
    border-radius: var(--radius);
    overflow: hidden;
  }
  @media (hover: hover) {
    .wrapper > a:hover {
      background: var(--bg2);
    }
  }
  @media (hover: none) {
    .wrapper > a:active {
      background: var(--bg2);
    }
  }
  .wrapper > a > img {
    width: 60%;
    height: 100%;
    object-fit: cover;
    aspect-ratio: 16 / 9;
    opacity: 0.5;
    mask-image: linear-gradient(to left, #0000, #000);
    -webkit-mask-image: -webkit-linear-gradient(to left, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 1) 100%);
  }

  .caption {
    position: absolute;
    bottom: 0;
    right: 0;
    margin: 11px 13px;
    text-align: right;
  }
  .caption p {
    margin: 0;
    line-height: 1.4;
  }
  .label {
    display: inline-block;
    font-size: 12px;
    color: var(--fg2);
  }
</style>