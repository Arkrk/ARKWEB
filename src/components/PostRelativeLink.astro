---
import { Post } from '../lib/interfaces.ts'
import { getPostLink } from '../lib/blog-helpers.ts'
import { Icon } from 'astro-icon/components'

export interface Props {
  prevPost: Post
  nextPost: Post
}

const { prevPost, nextPost } = Astro.props
---

<div class="post-relative-link">
  <div>
    {
      nextPost && (
        <a href={getPostLink(nextPost.Slug)} class="colored next">
          <div class="arrow-icon"><Icon name="mingcute:arrow-left-line" /></div>
          <div class="relative-title next">{nextPost.Title}</div>
        </a>
      )
    }
  </div>
  <div>
    {
      prevPost && (
        <a href={getPostLink(prevPost.Slug)} class="colored prev">
          <div class="relative-title prev">{prevPost.Title}</div>
          <div class="arrow-icon"><Icon name="mingcute:arrow-right-line" /></div>
        </a>
      )
    }
  </div>
</div>

<style>
  div.post-relative-link {
    display: flex;
    padding-top: 1.5rem;
    gap: 1rem;
  }
  div.post-relative-link > div {
    display: block;
    max-width: 50%;
  }
  div.post-relative-link > div:last-child {
    margin-left: auto;
  }
  div.post-relative-link > div > a {
    display: block;
    text-align: center;
    line-height: 1.2rem;
    font-size: 0.95rem;
  }
  div.post-relative-link > div > a.colored {
    display: flex;
    align-items: center;
    gap: 2px;
    padding: 10px;
    border-radius: 8px;
    color: var(--fg);
  }
  div.post-relative-link > div > a.colored:hover {
    background: #f7f6f3;
  }
  div.post-relative-link > div > a.colored > div.arrow-icon {
    font-size: 24px;
  }
  div.post-relative-link > div > a.colored > div.relative-title {
    width: auto;
    font-size: 1rem;
    font-weight: bold;
  }
  div.post-relative-link > div > a.colored > div.relative-title.next {
    text-align: left;
  }
  div.post-relative-link > div > a.colored > div.relative-title.prev {
    text-align: right;
  }
  @media (max-width: 640px) {
    div.post-relative-link {
      flex-direction: column;
    }
    div.post-relative-link > div {
      max-width: 100%;
    }
    div.post-relative-link > div > a.colored.prev {
      justify-content: end;
    }
  }
</style>
